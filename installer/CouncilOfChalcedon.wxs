<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <Product Id="*"
           Name="Council of Chalcedon"
           Language="1033"
           Version="!(bind.FileVersion.CouncilOfChalcedon.exe)"
           Manufacturer="John VonDrashek"
           UpgradeCode="8B5E8A3C-9F4D-4E6A-B7C8-2D1E0F3A4B5C">

    <Package InstallerVersion="500"
             Compressed="yes"
             InstallScope="perUser"
             Description="Council of Chalcedon Visual Novel Installer"
             Comments="An educational kinetic novel re-enacting the Fourth Ecumenical Council (451 AD)" />

    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <!-- Icon for Add/Remove Programs -->
    <Icon Id="AppIcon" SourceFile="icon.ico" />
    <Property Id="ARPPRODUCTICON" Value="AppIcon" />
    <Property Id="ARPHELPLINK" Value="https://github.com/JohnVonDrashek/council-of-chalcedon-vn" />

    <!-- Installation directory -->
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="LocalAppDataFolder">
        <Directory Id="INSTALLFOLDER" Name="Council of Chalcedon" />
      </Directory>
      <Directory Id="ProgramMenuFolder">
        <Directory Id="ApplicationProgramsFolder" Name="Council of Chalcedon" />
      </Directory>
      <Directory Id="DesktopFolder" Id2="Desktop" />
    </Directory>

    <!-- Application files - harvested dynamically -->
    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER" />

    <!-- Start Menu shortcut -->
    <DirectoryRef Id="ApplicationProgramsFolder">
      <Component Id="StartMenuShortcut" Guid="*">
        <Shortcut Id="StartMenuShortcut"
                  Name="Council of Chalcedon"
                  Description="An educational kinetic novel re-enacting the Fourth Ecumenical Council"
                  Target="[INSTALLFOLDER]CouncilOfChalcedon.exe"
                  WorkingDirectory="INSTALLFOLDER"
                  Icon="AppIcon" />
        <RemoveFolder Id="CleanUpStartMenuFolder" Directory="ApplicationProgramsFolder" On="uninstall" />
        <RegistryValue Root="HKCU" Key="Software\CouncilOfChalcedon" Name="StartMenuShortcut" Type="integer" Value="1" KeyPath="yes" />
      </Component>
    </DirectoryRef>

    <!-- Desktop shortcut -->
    <DirectoryRef Id="DesktopFolder">
      <Component Id="DesktopShortcut" Guid="*">
        <Shortcut Id="DesktopShortcut"
                  Name="Council of Chalcedon"
                  Description="An educational kinetic novel re-enacting the Fourth Ecumenical Council"
                  Target="[INSTALLFOLDER]CouncilOfChalcedon.exe"
                  WorkingDirectory="INSTALLFOLDER"
                  Icon="AppIcon" />
        <RegistryValue Root="HKCU" Key="Software\CouncilOfChalcedon" Name="DesktopShortcut" Type="integer" Value="1" KeyPath="yes" />
      </Component>
    </DirectoryRef>

    <Feature Id="ProductFeature" Title="Council of Chalcedon" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
      <ComponentRef Id="StartMenuShortcut" />
      <ComponentRef Id="DesktopShortcut" />
    </Feature>

    <!-- Custom UI -->
    <UIRef Id="WixUI_InstallDir" />
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />

    <!-- License -->
    <WixVariable Id="WixUILicenseRtf" Value="license.rtf" />
  </Product>
</Wix>
